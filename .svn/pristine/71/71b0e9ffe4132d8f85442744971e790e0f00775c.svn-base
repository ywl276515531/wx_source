@charset "utf-8";
html,body{
	width: 100%;
	margin: 0;
	padding: 0;
	font-family:"微软雅黑";
	overflow-x: hidden;
	background: white;
	font-size: 12px;
}
div,p,span,li,ul,a,h1,h2,h3,h4,h5,h6,hr,img,dl,dd{
	margin:0px;
	padding: 0px;
}
li{
	list-style: none;
}
a{
	text-decoration: none;
	outline: none;
	cursor: pointer;
}
img{
	border:none;
	max-width: 100%;
}
.clearfix{
	clear: both;
}
strong,b{
	font-weight: normal;
}
#bumen{
	max-width: 640px;
	margin:auto;
	background: white;
}
#bumen>.juzhong{
	width: 96%;
	margin:auto;
}
#bumen>.juzhong>.tit{
	line-height: 30px;
	width: 100%;
	text-align: center;
	font-size: 14px;
	color: black;
	letter-spacing: 1px;
	border-bottom: 1px solid #ccc;
}
#bumen>.juzhong>.cont{
	padding-top: 10px;
	font-size: 14px;
	letter-spacing: 1px;
}
#bumen>.juzhong>.cont>p{
	line-height: 25px;
}
#bumen>.juzhong>.top{
	width: 100%;
	margin-top: 10px;
	border:1px solid #ccc;
	border-top: none;
	border-bottom: none;
}
#bumen>.juzhong>.top>li{
	height: 30px;
	line-height: 30px;
	border-top: 1px solid #ccc;
}
#bumen>.juzhong>.top>li>.left{
	float: left;
	width: 100px;
	background: #f2f2f2;
	text-align: center;
	border-right: 1px solid #ccc;
}
#bumen>.juzhong>.top>li>.right{
	float: left;
	padding-left: 10px;
}
#bumen>.juzhong>.middle{
	height: 30px;
    width: 100%;
    border:1px solid #ccc;
    background: #f2f2f2;
}
#bumen>.juzhong>.middle>a{
	width: 33.2%;
	height: 100%;
	display: block;
	float: left;
	border-right: 1px solid #ccc;
	text-align: center;
	line-height: 30px;
}
#bumen>.juzhong>.middle .hou{
	margin-left: 1.5%;
}
#bumen>.juzhong>.middle>a>li{
	width: 100%;
	height: 100%;
	color: black;
}
#bumen>.juzhong .en{
	border-left: 1px solid #ccc;
	border-right: 1px solid #ccc;
	border-bottom: 1px solid #ccc;
	width: 100%;
}
#bumen>.juzhong .bottom .xia{
	display: none;
}
#bumen>.juzhong .bottom li{
	/*height: 30px;*/
	line-height: 30px;
	border-top: 1px solid #ccc;
}
#bumen>.juzhong .bottom li>.left{
	float: left;
	width: 100px;
	text-align: center;
}
#bumen>.juzhong .bottom li>.right{
	float: left;
	padding-left: 10px;
	width: 80%;
	border-left: 1px solid #ccc;
}
#bumen>.juzhong .en>ul>p{
	font-size: 12px;
}
@media (min-width: 501px) and (max-width: 645px){
	#bumen>.juzhong .bottom li>.right{
		width: 75%;
	}
}
@media (max-width: 512px){
	#bumen{
		width: 100%;
	}
	#bumen>.juzhong .bottom li>.right{
		width: 63%;
	}
	#bumen>.juzhong>.middle>a{
		width: 33.1%;
	}
}