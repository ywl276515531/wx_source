@media (min-width: 480px) and (max-width: 639px){
	.bg{
		width: 100%;
	}
}
@media (max-width: 479px){
	.bg{
		width: 100%;
	}
	.bg .container{
		max-width: 290px;
	}
	.bg .container>ul>a{
		height: 90px;
		width: 90px;
	}
}

