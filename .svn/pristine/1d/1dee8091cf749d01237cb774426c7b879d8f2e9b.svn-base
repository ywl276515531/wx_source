@charset "utf-8";
html,body{
	width: 100%;
	margin: 0;
	padding: 0;
	font-family:"微软雅黑";
	overflow-x: hidden;
	background: #efedf0;
	font-size: 12px;
}
div,p,span,li,ul,a,h1,h2,h3,h4,h5,h6,hr,img,dl,dd{
	margin:0px;
	padding: 0px;
}
li{
	list-style: none;
}
a{
	text-decoration: none;
	outline: none;
	cursor: pointer;
}
img{
	border:none;
	max-width: 100%;
}
.clearfix{
	clear: both;
}
strong{
	font-weight: normal;
}
#message{
	max-width: 640px;
	background: white;
	height: 40px;
	border-bottom: 1px solid #ccc;
	margin:auto;
}
#message>a{
	width: 49.5%;
	height: auto;
	text-align: center;
	float: left;
	line-height: 40px;
	position: relative;
	display: block;
	color: #7b7b7b;
}
#message>.hou{
	border-left: 1px solid #ccc;
}
.one{
	background: #efedf0;
	overflow: hidden;
}
#list{
	max-width: 640px;
	margin:auto;
	background: white;
	margin-top: 10px;
}
#list>a{
	width: 100%;
	display: block;
}
#list>a>p{
	width: 96%;
	margin:auto;
	color: black;
}
#list>a>.name{
	height: 30px;
	line-height: 30px;
}
#list>a>.cont{
	padding-bottom: 10px;
}
#list>a>div{
	width: 95%;
	margin:auto;
	border-top: 1px solid #ccc;
	height: 30px;
	line-height: 30px;
}
#list>a>div>p{
	float: left;
	color: black;
	color: black;
}
#list>a>div>span{
	float: right;
	color: black;
}
#mess_detail{
	max-width: 640px;
	margin:auto;
	background: white;
	min-height: 880px;
}
#mess_detail>.tit{
	padding-top: 10px;
	text-align: center;
	font-size: 14px;
	color: black;
	width: 95%;
	margin:auto;
}
#mess_detail>.xian{
	width: 95%;
	margin:auto;
	border-top: 1px dashed #ccc;
}
#mess_detail>.cont{
	width: 95%;
	margin:auto;
	padding-top: 5px;
	text-indent: 2em;
	padding-bottom: 20px;
}
#mess_detail>.xian2{
	width: 95%;
	margin:auto;
	border-top: 1px dashed black;
}
#mess_detail>span{
	float: right;
	padding-top: 5px;
	padding-right: 2.5%;
}
@media (min-width: 480px) and (max-width: 630px){
	#list{
		width: 96%;
    		margin: 10px 2%;
    		border-radius: 4px;
    		border: 1px solid #ccc;
	}
}
@media (max-width: 479px){
	#message{
		width: 100%;
	}
	#list{
		width: 96%;
    		margin: 10px 2%;
    		border-radius: 4px;
    		border: 1px solid #ccc;
	}
}