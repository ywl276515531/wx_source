@charset "utf-8";
html,body{
	width: 100%;
	margin: 0;
	padding: 0;
	font-family:"微软雅黑";
	overflow-x: hidden;
	background: #f0edf0;
	font-size: 12px;
}
div,p,span,li,ul,a,h1,h2,h3,h4,h5,h6,hr,img,dl,dd{
	margin:0px;
	padding: 0px;
}
li{
	list-style: none;
}
a{
	text-decoration: none;
	outline: none;
	cursor: pointer;
}
img{
	border:none;
	max-width: 100%;
}
.clearfix{
	clear: both;
}
strong{
	font-weight: normal;
}
#jiaoliu{
	max-width: 640px;
	margin:auto;
	min-height: 880px;
	background: white;
}
#jiaoliu .left{
	width: 160px;
	background: #00b8ee;
	float: left;
	min-height: 880px;
}
#jiaoliu .left>ul{
	width: 100%;
}
#jiaoliu .left>ul>a{
	width: 100%;
	height: 40px;
	display: block;
	border-bottom: 1px solid #c9c9c9;
	text-align: center;
	line-height: 40px;
	color: white;
}
#jiaoliu .left>ul>a>li{
	width: 100%;
	height: 100%;
}
.current{
	background: #f8b501;
}
#jiaoliu .right{
	float: left;
	width: 459px;
	min-height: 880px;
	margin-left: 10px;
}
#jiaoliu .right>div{
	width: 100%;
	min-height: 880px;
}
#detail{
	max-width: 640px;
	margin:auto;
	background: white;
}
#jiaoliu .right>div>ul{
	width: 95%;
	margin:auto;
	padding-top: 10px;
	float: left;
}
#jiaoliu .right>div>ul>li{
	float: left;
	width: 49%;
}
#jiaoliu .right>div>ul>li.hou{
	margin-left: 2%;
}
#jiaoliu .right>div>ul>li img{
	width: 100%;
	border:1px solid #dedede;
	height:150px;
}
#jiaoliu .right>div>ul>li .tit{
	text-align: center;
    font-size: 12px;
    padding-bottom: 10px;
}
@media (min-width: 501px) and (max-width: 645px){
	#jiaoliu .right{
		width: 65%;
	}
}
@media (max-width: 500px){
	#jiaoliu{
		width: 100%;
	}
	#jiaoliu .left{
		width: 80px;
	}
	#jiaoliu .right{
		width: 70%;
	}
	#jiaoliu .right>div>ul>li img{
		height: 100px;
	}
}