@charset "utf-8";
html,body{
	width: 100%;
	margin: 0;
	padding: 0;
	font-family:"微软雅黑";
	background: #efedf0;
	font-size: 12px;
}
div,p,span,li,ul,a,h1,h2,h3,h4,h5,h6,hr,img,dl,dd{
	margin:0px;
	padding: 0px;
}
li{
	list-style: none;
}
a{
	text-decoration: none;
	outline: none;
	cursor: pointer;
}
img{
	border:none;
	max-width: 100%;
}
.clearfix{
	clear: both;
}
strong{
	font-weight: normal;
}
#myact{
	max-width: 640px;
	background: white;
	border-bottom: 1px solid #ccc;
	margin:auto;
	height: 40px;
}
#myact>li{
	width: 49.5%;
	height: auto;
	text-align: center;
	float: left;
	line-height: 40px;
	position: relative;
}
#myact>li>a{
	display: block;
	color:#7b7b7b;
}
#myact>.hou{
	border-left: 1px solid #ccc;
}
#myact>li>ul{
	width: 100%;
	z-index: 3;
    background: white;
    border-right: 1px solid #ccc;
    position: absolute;
    display: none;
    border-bottom: 1px solid #ccc;
}
#myact>.hou>ul{
	border-right: none;
	border-left: 1px solid #ccc;
}
#myact>li>ul>a{
	width: 100%;
	height: 40px;
	display: block;
	color: #7b7b7b;
	border-top: 1px solid #ccc;
}
#pro{
	max-width: 640px;
	margin:auto;
	background: white;
	height: 190px;
	margin-bottom: 10px;
}
#pro .juzhong{
	width: 95%;
	margin:auto;
	height: 130px;
	padding-top: 10px;
}
#pro .juzhong>.left{
	float: left;
	width: 25%;
}
#pro .juzhong>.left img{
	border:1px solid #ccc;
}
#pro .juzhong>.right{
	float: left;
	width: 70%;
	padding-left: 5%;
	padding-top: 30px;
}
#pro .juzhong>.right>.name{
	color: #717171;
	font-size: 16px;
	padding-bottom: 5px;
}
#pro .juzhong>.right>.time{
	color: #717171;
}
#pro .xian{
	width: 100%;
	border-top: 1px dashed #ccc;
}
#pro .juzhong2{
	width: 90%;
	margin:auto;
	height: 50px;
	padding-top: 10px;
}
#pro .juzhong2>.right{
	float: right;
	height: 100%;
}
#pro .juzhong2>.right>button{
	width: 75px;
	height: 25px;
	border-radius: 4px;
	border:1px solid #ccc;
	background: white;
	color: #636363;
	cursor: pointer;
}
#pro .juzhong2>.right>button>a{
	color: #636363;
}
@media (min-width: 480px) and (max-width: 645px){

}
@media (max-width: 479px){
	#myact{
		width: 100%;
	}
	#pro{
		width: 100%;
		height: auto;
	}
	#pro .juzhong>.left img{
		width: 120px;
		height: 100px;
	}
	#pro .juzhong>.right>p{
		height: 20px;
		line-height: 20px;
	}
	#pro .juzhong>.left{
		width: 120px;
	}
	#pro .juzhong>.right{
		width: 58%;
		padding-left: 2%;
		padding-top: 20px;
	}
	#pro .juzhong{
		height: 110px;
	}
	#pro .juzhong>.right>.name{
		height: auto;
		font-size: 14px;
	}
	#pro .juzhong2{
		height: 30px;
	}
}