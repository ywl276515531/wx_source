@charset "utf-8";
html,body{
	width: 100%;
	margin: 0;
	padding: 0;
	font-family:"微软雅黑";
	overflow-x: hidden;
}
div,p,span,li,ul,a,h1,h2,h3,h4,h5,h6,hr,img,dl,dd{
	margin:0px;
	padding: 0px;
}
li{
	list-style: none;
}
a{
	text-decoration: none;
	outline: none;
	cursor: pointer;
}
img{
	border:none;
}
.clearfix{
	clear: both;
}
#bottom{
	width: 100%;
	height: 60px;
	background: white;
}
#bottom .content{
	width: 90%;
	margin:0 auto;
	height: 100%;
}
#bottom .content ul{
	width: 100%;
	height: 100%;
}
#bottom ul>li{
	float: left;
	width: 25%;
}
#bottom ul>li a{
	display: block;
}
#bottom ul>li>a>img{
	float: left;
    	margin-top: 15px;
    	margin-left: 40%;
    	width: 18px;
}
#bottom ul>li>a>p{
	float: left;
	margin-left:10px;
}
@media (min-width: 480px) and (max-width: 639px){
	#bottom ul>li img{
		padding-left: 40%;
	}
}
@media (max-width: 479px){
	#bottom ul>li img{
		padding-left: 35%;
	}
}