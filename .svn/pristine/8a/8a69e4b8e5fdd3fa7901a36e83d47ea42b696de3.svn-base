@charset "utf-8";
html,body{
	width: 100%;
	margin: 0;
	padding: 0;
	font-family:"微软雅黑";
	overflow-x: hidden;
	background: #f0edf0;
	font-size: 12px;
}
div,p,span,li,ul,a,h1,h2,h3,h4,h5,h6,hr,img,dl,dd{
	margin:0px;
	padding: 0px;
}
li{
	list-style: none;
}
a{
	text-decoration: none;
	outline: none;
	cursor: pointer;
}
img{
	border:none;
	max-width: 100%;
}
.clearfix{
	clear: both;
}
strong{
	font-weight: normal;
}
#jiaoliu{
	max-width: 640px;
	margin:auto;
	min-height: 880px;
	background: white;
}
#jiaoliu .left{
	width: 22%;
	background: #00b8ee;
	float: left;
	min-height: 880px;
}
#jiaoliu .left>ul{
	width: 100%;
}
#jiaoliu .left>ul>a{
	width: 100%;
	height: 40px;
	display: block;
	border-bottom: 1px solid #c9c9c9;
	text-align: center;
	line-height: 40px;
	color: white;
}
#jiaoliu .left>ul>a>li{
	width: 100%;
	height: 100%;
}
.current{
	background: #f8b501;
}
#jiaoliu .right{
	float: left;
	width: 76%;
	min-height: 880px;
	margin-left: 2%;
}
#jiaoliu .right>div{
	width: 100%;
	min-height: 880px;
}
#detail{
	max-width: 640px;
	margin:auto;
	background: white;
}
#jiaoliu .right>div>ul{
	width: 100%;
	margin:auto;
	padding-top: 10px;
	float: left;
}
#jiaoliu .right>div>ul>li{
	float: left;
	width: 48%;
}
#jiaoliu .right>div>ul>li.hou{
	margin-left:2%;
}
#jiaoliu .right>div>ul>li img{
	width: 98.5%;
	border:1px solid #eaeaea;
	height:148px;
}
#jiaoliu .right>div>ul>li .tit{
	text-align: center;
    font-size: 12px;
}
